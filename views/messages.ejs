    <body>
        <div class="wrapper">
            <div class="row">
                 <%- include('./layouts/side-nav-bar') -%> 
                <div class="mainSectionContainer col-10 col-md-8 col-lg-6">
                    <div class="titleContainer">
                        <h1>Inbox</h1>
                        <a href="/messages/new"><i class="far fa-plus-square"></i></a>
                    </div>

                    <div class="resultsContainer">
                    <% if (data.length > 0) { %>
                        <% for (let allChats of data) { %>
                            <a href="/chat/<%= allChats._id %>" class="resultListItem">
                                
                                <div class="resultsImageContainer <% if (allChats.isGroupChat) { %> groupChatImage <% } else { %><%= allChats.isGroupChat %><% } %>">
                                

                                <% for (let participiant of allChats.users) { %>
                                    <img src="<%= participiant.pofile_pic%>" alt="User" s="" profile="" pic="">
                                <% } %>
                                </div>
                                <div class="resultsDetailsContainer ellipsis">
                                    <span class="heading ellipsis"><%= helper.GetParticipiants(session._id,allChats.users) %></span>
                                    <span class="subText ellipsis">Last Message user Name: <%= allChats.latestMessage %></span>
                                </div>
                            </a>
                    <% } } %>    


